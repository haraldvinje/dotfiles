set nu rnu
set ignorecase
set smartcase
set commentary
set surround
set clipboard+=unnamed
set NERDTree

map <C-n> :NERDTreeToggle<CR>

let g:NERDTreeMapCloseDir ='h'
let g:NERDTreeMapActivateNode='l'

nmap <C-h> <C-w><C-h>
nmap <C-j> <C-w><C-j>
nmap <C-k> <C-w><C-k>
nmap <C-l> <C-w><C-l>

sethandler <S-CR> n-v:ide i:vim
